{{> nav }}
<div class="container p-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header bg-white border-0">
          <h2 class="text-info mb-0 text-center">Actualizacion de Datos | Personal</h2>
        </div>
        <div class="card-body">

          {{> alert }}
          <form action="/personal/actualizar/" method="POST">
            <div class="form-group">
              <input value="{{worker.id}}" minlength="6" maxlength="10" required autocomplete="off" autofocus
                class="form-control" type="hidden" name="id" id="document">
            </div>
            <div class="form-group">
              <label for="document">Cedula de Identidad</label>
              <input value="{{worker.doc}}" minlength="6" maxlength="10" required autocomplete="off" autofocus
                class="form-control" type="text" name="document" id="document">
            </div>
            <div class="form-group">
              <label for="name">Nombre</label>
              <input value="{{worker.name}}" minlength="4" required autocomplete="off" autofocus class="form-control"
                type="text" name="name" id="name">
            </div>
            <div class="form-group">
              <label for="name">Apellido</label>
              <input value="{{worker.last_name}}" minlength="4" required autocomplete="off" autofocus
                class="form-control" type="text" name="lastname" id="lastname">
            </div>
            <div class="form-group">
              <label for="">Cargo</label>
              <input value="{{worker.cargo}}" type="text" class="form-control" disabled>
            </div>
            <div class="form-group">
              <label for="#">Estado</label>
              <input value="{{validState worker.state}}" type="text" class="form-control" disabled>
            </div>
            <div class="form-group">
              <input type="submit" class="btn btn-small btn-info btn-block">
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>