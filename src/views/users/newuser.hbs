{{> nav }}
<div class="container p-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header bg-primary border-0">
          <h2 class="text-light mb-0 text-center">Agrega un Usuario</h2>
        </div>
        <div class="card-body">

          {{> alert }}
          <form action="/usuarios/agregar/" method="POST">
            <div class="form-group">
              <label for="position">Seleccione el personal</label>
              <select class="form-control" name="person" id="position">
                {{#each workers}}
                <option value="{{id}}">{{fullname}}</option>
                {{#else}}
                <option disabled selected>No hay personal registrado o activos</option>
                {{/else}}
                {{/each}}
              </select>
            </div>
            <div class="form-group">
              <label for="cargo">Nombre de usuario</label>
              <input minlength="4" maxlength="10" required autocomplete="off" autofocus class="form-control" type="text"
                name="username" id="username">
            </div>
            <div class="form-group">
              <label for="cargo">Password</label>
              <input minlength="4" maxlength="10" required autocomplete="off" autofocus class="form-control"
                type="password" name="password" id="password">
            </div>
            <div class="form-group">
              <input type="submit" value="Agregar" class="btn btn-small btn-primary btn-block">
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>