{{> nav }}
<div class="container p-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card">
        <div class="card-header bg-primary border-0">
          <h2 class="text-light mb-0 text-center">Cambio de contraseña {{id}}</h2>
        </div>
        <div class="card-body">

          {{> alert }}
          <form action="/usuarios/changepassword/" method="POST">
            <div class="form-group">
              <input value={{id}}  type="hidden"
                name="id" id="id">
            </div>
            <div class="form-group">
              <label for="cargo">Ingrese la nueva contraseña</label>
              <input minlength="6" maxlength="12" required autocomplete="off" autofocus class="form-control" type="password"
                name="password" id="password">
            </div>
            <div class="form-group">
              <label for="cargo">Confirme su contraseña</label>
              <input minlength="6" maxlength="12" required autocomplete="off" autofocus class="form-control" type="password"
                name="password2" id="repass">
            </div>
            <div class="form-group">
              <input type="submit" value="Agregar" class="btn btn-small btn-primary btn-block">
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>