{{> nav }}
<div class="container p-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header bg-primary border-0">
          <h2 class="text-light mb-0 text-center">Actualizar Cargo</h2>
        </div>
        <div class="card-body">

          {{> alert }}
          <form action="/cargos/actualizar/" method="POST">
            <div class="form-group">
              <label for="cargo">Nombre del Cargo</label>
              <input value="{{position.name}}" minlength="4" maxlength="10" required autocomplete="off" autofocus
                class="form-control" type="text" name="cargo" id="cargo">
            </div>
            <div class="form-group">
              <input value="{{position.id}}" minlength="4" maxlength="10" required autocomplete="off" autofocus
                class="form-control" type="hidden" name="id" id="id">
            </div>
            <div class="form-group">
              <input type="submit" value="Actualizar" class="btn btn-small btn-primary btn-block">
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>